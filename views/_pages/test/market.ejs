<%- contentFor('title') %>  
<title>Hoa Than Son</title>

<%- contentFor('breadcrumb') %>
<div class="col-sm-6">
    <div class="page-title-box">
        <h4 class="font-size-18">Market Information</h4>
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item active">Welcome to HTS Market Information</li>
        </ol>
    </div>
</div>

<%- contentFor('body') %>


<div class="row">
    <div class="col-xl-12">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs nav-tabs-custom" role="tablist">
            <li class="nav-item">
              <a class="nav-link active" data-toggle="tab" href="#daily" role="tab">
                <span class="d-block d-sm-none"><i class="fas fa-home"></i></span>
                <span class="d-none d-sm-block">Daily</span> 
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#weekly" role="tab">
                <span class="d-block d-sm-none"><i class="far fa-user"></i></span>
                <span class="d-none d-sm-block">Weekly</span> 
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" data-toggle="tab" href="#intra15" role="tab">
                <span class="d-block d-sm-none"><i class="far fa-envelope"></i></span>
                <span class="d-none d-sm-block">15m</span>   
              </a>
            </li>
        </ul>
  
        <!-- Tab panes -->
        <div class="tab-content" >
            <div class="tab-pane active p-3" id="daily" role="tabpanel"  >
                    <table class="table table-bordered mb-0 text-center">
                        <tbody>
                            <% for(let i=0; i<5; i++) {%>
                                <tr>
                                <% for(let j=0; j<6; j++) {%>
                                <td style="background: rgb(<%= result0[i*5+j].Red %>,<%= result0[i*5+j].Green %>,<%= result0[i*5+j].Blue %> )">
                                    <p><%= result0[i*5+j].TICKER %></p><p><%= (+result0[i*5+j].Criteria2).toFixed(2) %>%</p>
                                </td>
                                <% } %>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <table >
                        <style>
                         td {
                          border: 0px solid black;
                        }
                        </style>
                        
                        <tr><td ><%= (result0[0].HEATDATE) %> <%= result0[0].HEATTIME %></td></tr>
                    </table>                    
            </div>
            <div class="tab-pane p-3" id="weekly" role="tabpanel" >
                    <table class="table table-bordered mb-0 text-center">
                        <tbody>
                            <% for(let i=0; i<5; i++) {%>
                                <tr>
                                <% for(let j=0; j<6; j++) {%>
                                <td style="background: rgb(<%= result2[i*5+j].Red %>,<%= result2[i*5+j].Green %>,<%= result2[i*5+j].Blue %> )">
                                    <p><%= result2[i*5+j].TICKER %></p><p><%= (+result2[i*5+j].Criteria1).toFixed(2) %>p</p>
                                </td>
                                <% } %>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <table >
                        <style>
                         td {
                          border: 0px solid black;
                        }
                        </style>
                        
                        <tr><td ><%= (result2[0].HEATDATE) %> <%= result2[0].HEATTIME %></td></tr>
                    </table>                    
            </div>
            <div class="tab-pane p-3" id="intra15" role="tabpanel" >
                    <table class="table table-bordered mb-0 text-center">
                        <tbody>
                            <% for(let i=0; i<5; i++) {%>
                                <tr>
                                <% for(let j=0; j<6; j++) {%>
                                <td style="background: rgb(<%= result3[i*5+j].Red %>,<%= result3[i*5+j].Green %>,<%= result3[i*5+j].Blue %> )">
                                    <p><%= result3[i*5+j].TICKER %></p><p><%= (+result3[i*5+j].Criteria3).toFixed(2) %>%</p>
                                </td>
                                <% } %>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                    <table >
                        <style>
                         td {
                          border: 0px solid black;
                        }
                        </style>
                        
                        <tr><td ><%= (result3[0].HEATDATE) %> <%= result3[0].HEATTIME %></td></tr>
                    </table>                    
            </div>
        </div>
    </div>
</div>
    

    
